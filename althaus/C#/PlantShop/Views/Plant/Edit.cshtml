@model Plant;
<!-- This view's title -->
@{
    ViewData["Title"] = "Edit Plant";
}

<!-- This view's heading -->
<h2>@Model.Name's Details</h2>
<hr />
<!-- Editing a plant form -->
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditResult">
            <!-- Hides Id feild for the Plant_ID as it autoincrements -->
            <input type="hidden" asp-for="@Model.Plant_Id" />
            <!-- Name input -->
            <div class="form-group">
                <label asp-for="@Model.Name" class="control-label"></label>
                <input asp-for="@Model.Name" class="form-control" />
                <span asp-validation-for="@Model.Name" class="text-danger"></span>
            </div>
            <!-- Family input -->
            <div class="form-group">
                <label asp-for="@Model.Family" class="control-label"></label>
                <input asp-for="@Model.Family" class="form-control" />
                <span asp-validation-for="@Model.Family" class="text-danger"></span>
            </div>
            <!-- Indoor or Outdoor input -->
            <div class="form-group">
                <label asp-for="@Model.IndoorOutdoor" class="control-label">Indoor or Outdoor</label>
                <input asp-for="@Model.IndoorOutdoor" class="form-control" />
                <span asp-validation-for="@Model.IndoorOutdoor" class="text-danger"></span>
            </div>
            <!-- Quantity input -->
            <div data-mdb-input-init class="form-outline" style="width: 22rem;">
                <label asp-for="@Model.Quantity" class="form-label">Quantity:</label>
                <input name="Quantity" asp-for="@Model.Quantity" class="form-control" type="number" required />
            </div>
            <!-- image input -->
            <div class="form-group">
                <label asp-for="@Model.Plant_Image" class="control-label">Plant Image:</label>
                <input name="Plant_Image" asp-for="@Model.Plant_Image" class="form-control" />
            </div>
            <hr />
            <!-- Submit and cancel button -->
            <div>
                <input asp-action="EditResult" type="submit" value="Save" class="btn btn-primary" />
                <a asp-controller="Plant" asp-action="Index" class="btn btn-primary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}